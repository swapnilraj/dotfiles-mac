{
  "suggest.autoTrigger": "always",
  "tsserver.npm": "/opt/homebrew/bin/npm",
  "languageserver": {
    "haskell": {
      "command": "ghcide",
      "args": ["--lsp"],
      "rootPatterns": [
        ".stack.yaml",
        "cabal.config",
        "package.yaml",
        ".hie-bios",
        "BUILD.bazel"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ]
    },
    "purescript": {
      "command": "purescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["purescript"],
      "rootPatterns": ["bower.json", "psc-package.json", "spago.dhall"]
    },
  "ocaml-lsp": {
    "command": "opam",
    "args": ["config", "exec", "--", "ocamllsp"],
    "filetypes": ["ocaml", "reason", "ocaml.menhir", "ocaml.interface", "ocaml.ocamllex"],
    "rootPatterns": ["*.opam", "esy.json", "package.json", ".git"]
    }
  },
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true
}
